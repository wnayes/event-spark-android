<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewerLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <!-- The main map view -->
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment" xmlns:tools="http://schemas.android.com/tools"/>
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/initialScreen"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:background="#EEFFFFFF"
        android:orientation="vertical"
        android:clickable="true">

        <!-- Logo and small welcome text. -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/initialHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">
	        <ImageView
	            android:id="@+id/logoBanner"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="16dp"
	            android:src="@drawable/biglogo" 
	            android:contentDescription="@string/event_create_image_flavor_text"/>
	        <TextView android:id="@+id/text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:layout_marginBottom="32dp"
	            android:text="@string/loading_blurb"
	            style="@style/eventHoundTheme.sentence"/>
	    </LinearLayout>

        <!-- Create event action with progress. -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/initialStatusLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
	        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	            android:id="@+id/initialProgressLayout"
	            android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50sp"
                android:gravity="center"
                android:orientation="horizontal" >
		        <ProgressBar
		            android:id="@+id/initialProgress"
		            android:indeterminateOnly="true"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            style="?android:attr/progressBarStyleSmall"/>
		        <TextView android:id="@+id/statusText"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/finding_location"
                    android:layout_marginLeft="2dp"/>
		    </LinearLayout>
	        <Button android:id="@+id/createEventButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Event"
                android:minWidth="180sp"
                android:onClick="onCreateEventClick"
                android:visibility="gone"/>
	    </LinearLayout>

        <!-- Holds the View Events button. -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	        android:id="@+id/initialScreenViewEventsLayout"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:orientation="vertical">
	        <Button android:id="@+id/viewEventsButton"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="36dp"
	            android:text="View Events"
	            android:minWidth="180sp"
	            android:onClick="onViewEventsClick"/>
	    </LinearLayout>
	    
        <!-- Attempt to reperform the loading sequence. -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/initialScreenRetry"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">
            <Button android:id="@+id/retryLoadButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retry"
                android:minWidth="180sp"
                android:onClick="onRetryLoadClick"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
