<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:background="#5a5a5a" >
      
      <TextView
          android:id="@+id/title_welcome_dialog"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:paddingTop="20dp"
          android:paddingBottom="30dp"
          android:paddingLeft="20dp"
          android:paddingRight="20dp"
          android:text="@string/title_welcome_dialog"
          android:textColor="#ffffff"
          android:textSize="22sp" />
      
      <TextView
          android:id="@+id/welcome_dialog_one"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:drawableRight="@drawable/place"
          android:paddingBottom="30dp"
          android:paddingLeft="20dp"
          android:paddingRight="15dp"
          android:text="@string/welcome_dialog_one"
          android:textColor="#d9d9d9" />
      
       <TextView
           android:id="@+id/welcome_dialog_two"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:drawablePadding="10dp"
           android:drawableRight="@drawable/ic_action_new"
           android:paddingBottom="30dp"
           android:paddingLeft="20dp"
           android:paddingRight="15dp"
           android:text="@string/welcome_dialog_two"
           android:textColor="#d9d9d9" />
          
       <TextView
           android:id="@+id/welcome_dialog_three"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingBottom="30dp"
           android:paddingLeft="20dp"
           android:paddingRight="20dp"
           android:text="@string/welcome_dialog_three"
           android:textColor="#d9d9d9" />

</LinearLayout>
</ScrollView>