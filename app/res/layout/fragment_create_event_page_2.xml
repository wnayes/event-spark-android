<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView style="?android:textAppearanceLarge"
            android:text="@string/event_time_page_title"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Event time controls -->
        <LinearLayout android:id="@+id/time_controls" 
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/event_time_display"
                style="@android:style/TextAppearance.Medium"
                android:text="@string/time_default"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button android:id="@+id/event_time_change"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:text="@string/change"
                android:onClick="showEventTimeDialog" />
        </LinearLayout>
        
        <!-- Event date controls -->
        <LinearLayout android:id="@+id/date_controls" 
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/event_date_display"
                style="@android:style/TextAppearance.Medium"
                android:text="@string/date_default"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button android:id="@+id/event_date_change"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:text="@string/change"
                android:onClick="showEventDateDialog" />
        </LinearLayout>

 <!--  <CheckBox android:id="@+id/checkbox_currently_happening"
