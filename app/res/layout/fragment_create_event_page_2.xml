            android:text="@string/event_time_length_info" />

        <Spinner
            android:id="@+id/spinner_hours_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:entries="@array/time_array_hours"
            android:prompt="@string/event_select_hours" />

        <Spinner
            android:id="@+id/spinner_minutes_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:entries="@array/time_array_minutes"
            android:prompt="@string/event_select_minutes" />

        <Spinner
            android:id="@+id/spinner_am_pm_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
