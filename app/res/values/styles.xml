<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="eventHoundTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#31312e</item>
    </style>
    
    <style name="eventHoundTheme.spinner">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="eventHoundTheme.title">
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="eventHoundTheme.button">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">.6</item>
    </style>
    
    <style name="eventHoundTheme.smallHeading">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#31312e</item>
    </style>
    
    <style name="eventHoundTheme.sentence">
        <item name="android:textSize">12sp</item>
    </style>

</resources>
