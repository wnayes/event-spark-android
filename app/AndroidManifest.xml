<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appchallenge.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <permission
        android:name="com.appchallenge.android.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.appchallenge.android.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light.DarkActionBar" >
        <activity
            android:name="com.appchallenge.android.EventViewer"
            android:label="@string/title_activity_event_viewer" >
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.appchallenge.android.CreateEvent"
            android:label="@string/title_activity_create_event" >
        </activity>
        <activity
            android:name="com.appchallenge.android.EventDetails"
            android:label="@string/title_activity_event_details" >
        </activity>
        <activity
            android:name="com.appchallenge.android.Settings"
            android:label="@string/title_activity_settings" >
        </activity>
		<activity
            android:name="com.appchallenge.android.EventEdit"
            android:label="@string/event_edit_page_title" >
        </activity>
        <activity
            android:name="com.appchallenge.android.EventEditList"
            android:label="@string/event_edit_page_title" >
        </activity>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/maps_api_key_debug" />
        
        <service
            android:name="NotificationService">
        </service>
        
        <receiver
		    android:name=".receiver.StartNotificationServiceAtBoot"
		    android:enabled="true"
		    android:exported="true"
		    android:label="StartNotificationServiceAtBoot">
		    <intent-filter>
		        <action android:name="android.intent.action.BOOT_COMPLETED" />
		    </intent-filter>
		</receiver>
    </application>
</manifest>